<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AdapterItemContent">
        <item name="android:textColor">@color/text_default</item>
        <item name="android:textSize">@dimen/text_size_wheel_content</item>
        <item name="android:padding">@dimen/default_margin_padding_x_small</item>
        <item name="android:layout_marginTop">@dimen/default_margin_padding</item>
        <item name="android:layout_marginBottom">@dimen/default_margin_padding</item>
    </style>

    <style name="ProfileCharacteristicsTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="CharacteristicOption">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/item_option_background</item>
    </style>
    <style name="BlueButton" parent="BaseButton">
        <item name="android:background">@drawable/blue_button_bg</item>
        <item name="android:textColor">@color/blue_button_text_color</item>
    </style>

    <style name="BaseButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/txtSizeMD</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/paddingMD</item>
        <item name="android:paddingEnd">@dimen/paddingMD</item>
        <item name="android:paddingTop">@dimen/paddingSM</item>
        <item name="android:paddingBottom">@dimen/paddingSM</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>